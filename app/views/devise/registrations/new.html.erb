<h2>Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "ps-2 col-6 border rounded-2", style:"height: 40px"  %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "ps-2 col-2 border rounded-2", style:"height: 40px"  %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirmar password", class: "ps-2 col-2 border rounded-2", style:"height: 40px" %>
  </div>
  <br>
  
    <div class="my-2">
      <%= f.label :name, "Nombre", class: "col-6" %>
      <br>
      <%= f.text_field :name,  placeholder: "Name", class: "ps-2 col-6 border rounded-2", style:"height: 40px" %>
    </div>

    <div class="my-2">
      <%= f.label :age, "Teléfono", class: "col-6" %>
      <br>
      <%= f.text_field :phone, required: true, placeholder: "Teléfono", class: "ps-2 col-6 border rounded-2", style:"height: 40px" %>
    </div>

    <div class="my-2">
      <%= f.label :age, "Edad", class: "col-6" %>
      <br>
      <%= f.text_field :age, required: true, placeholder: "Edad", class: "ps-2 col-6 border rounded-2", style:"height: 40px" %>
    </div>

  <br>

  <br>
  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-secondary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
