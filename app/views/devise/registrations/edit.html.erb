<h2>Editar <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "ps-2 col-6 border rounded-2", style:"height: 35px" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "ps-2 col-2 border rounded-2", style:"height: 35px"  %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirmar password", class: "ps-2 col-2 border rounded-2", style:"height: 35px" %>
  </div>

    <div class="my-2">
      <%= f.label :name, "Nombre", class: "col-6" %>
      <br>
      <%= f.text_field :name, required: true, placeholder: "Nombre", class: "ps-2 col-6 border rounded-2", style:"height: 35px" %>
    </div>

    <div class="my-2">
      <%= f.label :age, "Teléfono", class: "col-6" %>
      <br>
      <%= f.text_field :phone, required: true, placeholder: "Teléfono", class: "ps-2 col-6 border rounded-2", style:"height: 35px" %>
    </div>

    <div class="my-2">
      <%= f.label :age, "Edad", class: "col-6" %>
      <br>
      <%= f.text_field :age, required: true, placeholder: "Edad", class: "ps-2 col-6 border rounded-2", style:"height: 35px" %>
    </div>

  <br>
    <div class="field">
    <%= f.label :current_password %> <i>( se requiere su password actual para confirmar los cambios)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "mb-2 ps-2 col-2 border rounded-2", style:"height: 35px" %>
  </div>
  <div class="actions">
    <%= f.submit "Update", class: "btn btn-secondary" %>
  </div>
<% end %>
<br>
<h3>Cancel my account</h3>

<div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "mb-3 ps-2 col-2 btn btn-danger", style:"height: 35px" %></div>

