<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "Error:") %> No se puede crear el post debido a:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>

    <div class="my-2 col-12 col-md-6">
      <%= form.label :image, "Imagen", class: "col-12" %>
      <br>
      <%= form.text_field :image, required: true, placeholder: "Nombre del archivo de imagen", class: "ps-2 col-12 border rounded-2", style:"height: 40px" %>
    </div>

    <div class="my-2 col-12 col-md-6">
      <%= form.label :title, "Título", class: "col-12" %>
      <br>
      <%= form.text_field :title, required: true, placeholder: "Nombre del título", class: "ps-2 col-12 border rounded-2", style:"height: 40px" %>
    </div>

    <div class="my-2 col-12 col-md-6">
      <%= form.label :description, "Título", class: "col-12" %>
      <br>
      <%= form.text_field :description, required: true, placeholder: "Relájese", class: "ps-2 col-12 border rounded-2", style:"height: 40px" %>
    </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
