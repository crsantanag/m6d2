<p style="color: green"><%= notice %></p>

<%= render @post %>

<div>
  <%= link_to "Back to posts", posts_path, class: "btn btn-light" %> |

  <% if user_signed_in? %>

    <% if current_user.admin? || current_user.id == @post.user_id %>
      <%= link_to   "Edit this post", edit_post_path(@post), class: "btn btn-info" %> | 
      <%= link_to   "Comment this post", edit_post_path(@post), class: "btn btn-info" %>
        <br>
      <%= button_to "Destroy this post", @post, method: :delete, class: "btn btn-danger" %>
    <% else %>
      <%= link_to   "Comment this post", edit_post_path(@post), class: "btn btn-info" %>
    <% end %>

  <% else %>

    <%= link_to   "Comment this post", edit_post_path(@post), class: "btn btn-info" %>

  <% end %>

</div>
