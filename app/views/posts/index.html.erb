<p style="color: green"><%= notice %></p>

<% content_for :title, "Posts" %>

<h1>Posts</h1>

<% if user_signed_in? %>
  <% if current_user.admin? %>
    <%= link_to "Crear post", new_post_path, class: "btn btn-primary" %>
  <% end %>
<% end %>

<div id="posts">
  <% @posts.each do |post| %>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-sm-6">

        <%= render post %>

        </div>
      </div>
    </div>
  <% end %>
</div>

